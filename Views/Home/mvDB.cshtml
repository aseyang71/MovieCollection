@{
    ViewBag.Title = "Movie Data List";
}

@model IEnumerable<MovieCollection.Models.NewData>

<div>
    <h2 style="text-align:center">Movie List</h2>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (MovieCollection.Models.NewData i in Model)
            {
                @if (i.Title == "Independence Day")
                {
                    return;
                }
                else
                {
                <tr>
                    <td>@i.Category</td>
                    <td>@i.Title</td>
                    <td>@i.Year</td>
                    <td>@i.Director</td>
                    <td>@i.Rating</td>
                    <td>@i.Edited</td> 
                    <td>@i.LentTo</td>
                    <td>@i.Notes</td>
                </tr>
                }

            }
        </tbody>
    </table>
</div>


